<Window x:Class="DelegacionMunicipal.vistas.FormReporteSiniestro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegacionMunicipal.vistas"
        mc:Ignorable="d"
        Title="Levantar Reporte de Siniestro" Height="562.729" Width="864.681">
    <Grid ScrollViewer.CanContentScroll="True" Margin="0,0,2,-2">
        <Label Content="Seleccionar Vehiculo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Conductor" HorizontalAlignment="Left" Margin="53,48,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Conductor" HorizontalAlignment="Left" Margin="124,52,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Vehiculo" HorizontalAlignment="Left" Margin="341,50,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Vehiculo" HorizontalAlignment="Left" Margin="437,52,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_AgregarVehiculo" Content="Agregar" HorizontalAlignment="Left" Margin="593,54,0,0" VerticalAlignment="Top" Width="74" Click="btn_AgregarVehiculo_Click"/>

        <Label Content="Vehiculos involucrados" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.12,0.2"/>


        <Label Content="Dirección" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top"/>
        <Label Content="Colonia:" HorizontalAlignment="Left" Margin="40,242,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.435"/>
        <TextBox x:Name="txt_Colonia" HorizontalAlignment="Left" Height="23" Margin="90,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Calle:" HorizontalAlignment="Left" Margin="279,242,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Calle" HorizontalAlignment="Left" Height="23" Margin="328,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Número:" HorizontalAlignment="Left" Margin="472,239,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="txt_Numero" HorizontalAlignment="Left" Height="23" Margin="562,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Imágenes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,273,0,0"/>
        <Button x:Name="btn_AgregarImagen" Content="Agregar imagen" HorizontalAlignment="Left" Margin="53,304,0,0" VerticalAlignment="Top" Click="btn_AgregarImagen_Click" />


        <Button x:Name="btn_RegistrarReporte" Content="Registrar" HorizontalAlignment="Left" Margin="535,406,0,0" VerticalAlignment="Top" Width="75" Click="btn_RegistrarReporte_Click"/>
        <Button x:Name="btn_CancelarRegistro" Content="Cancelar" HorizontalAlignment="Left" Margin="625,406,0,0" VerticalAlignment="Top" Width="75" Click="btn_CancelarRegistro_Click"/>

    </Grid>
</Window>
