<Window x:Class="DelegacionMunicipal.vistas.FormReporteSiniestro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegacionMunicipal.vistas"
        mc:Ignorable="d"
        Title="Levantar Reporte de Siniestro" Height="683.729" Width="1053.681">
    <Grid ScrollViewer.CanContentScroll="True" Margin="0,0,2,1">
        <Label Content="Seleccionar Vehiculo" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Conductor" HorizontalAlignment="Left" Margin="53,48,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Conductor" HorizontalAlignment="Left" Margin="124,52,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmb_Conductor_SelectionChanged"/>
        <Label Content="Vehiculo" HorizontalAlignment="Left" Margin="280,51,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Vehiculo" HorizontalAlignment="Left" Margin="361,52,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_AgregarVehiculo" Content="Agregar" HorizontalAlignment="Left" Margin="504,52,0,0" VerticalAlignment="Top" Width="74" Click="btn_AgregarVehiculo_Click" RenderTransformOrigin="-0.5,0.7"/>

        <Label Content="Vehiculos involucrados" HorizontalAlignment="Left" Margin="602,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.12,0.2"/>


        <Label Content="Dirección" HorizontalAlignment="Left" Margin="91,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Colonia:" HorizontalAlignment="Left" Margin="14,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.435"/>
        <TextBox x:Name="txt_Colonia" HorizontalAlignment="Left" Height="23" Margin="138,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Calle:" HorizontalAlignment="Left" Margin="14,186,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Calle" HorizontalAlignment="Left" Height="23" Margin="138,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
