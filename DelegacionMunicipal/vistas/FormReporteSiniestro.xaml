<Window x:Class="DelegacionMunicipal.vistas.FormReporteSiniestro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegacionMunicipal.vistas"
        mc:Ignorable="d"
        Title="Levantar Reporte de Siniestro" Height="562.729" Width="951.681">
    <Grid ScrollViewer.CanContentScroll="True" Margin="0,0,2,-82">
        <Label Content="Seleccionar Vehiculo" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Conductor" HorizontalAlignment="Left" Margin="53,48,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Conductor" HorizontalAlignment="Left" Margin="124,52,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmb_Conductor_SelectionChanged"/>
        <Label Content="Vehiculo" HorizontalAlignment="Left" Margin="280,51,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Vehiculo" HorizontalAlignment="Left" Margin="361,52,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_AgregarVehiculo" Content="Agregar" HorizontalAlignment="Left" Margin="504,52,0,0" VerticalAlignment="Top" Width="74" Click="btn_AgregarVehiculo_Click" RenderTransformOrigin="-0.5,0.7"/>

        <Label Content="Vehiculos involucrados" HorizontalAlignment="Left" Margin="602,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.12,0.2"/>


        <Label Content="Dirección" HorizontalAlignment="Left" Margin="91,111,0,0" VerticalAlignment="Top"/>
        <Label Content="Colonia:" HorizontalAlignment="Left" Margin="14,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.435"/>
        <TextBox x:Name="txt_Colonia" HorizontalAlignment="Left" Height="23" Margin="138,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Calle:" HorizontalAlignment="Left" Margin="14,186,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Calle" HorizontalAlignment="Left" Height="23" Margin="138,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Número:" HorizontalAlignment="Left" Margin="14,224,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="txt_Numero" HorizontalAlignment="Left" Height="23" Margin="138,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Imágenes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,303,0,0"/>
        <Button x:Name="btn_AgregarImagen" Content="Agregar imagen" HorizontalAlignment="Left" Margin="10,334,0,0" VerticalAlignment="Top" Click="btn_AgregarImagen_Click" />


        <Button x:Name="btn_RegistrarReporte" Content="Registrar" HorizontalAlignment="Left" Margin="593,495,0,0" VerticalAlignment="Top" Width="75" Click="btn_RegistrarReporte_Click"/>
        <Button x:Name="btn_CancelarRegistro" Content="Cancelar" HorizontalAlignment="Left" Margin="709,495,0,0" VerticalAlignment="Top" Width="75" Click="btn_CancelarRegistro_Click"/>
        <ListBox x:Name="lb_VehiculosInvolucrados" HorizontalAlignment="Left" Height="72" Margin="611,36,0,0" VerticalAlignment="Top" Width="197"/>
        <Label x:Name="output" Content="" HorizontalAlignment="Left" Margin="40,474,0,0" VerticalAlignment="Top"/>
        <Image x:Name="imagen1" HorizontalAlignment="Left" Height="100" Margin="28,349,0,0" VerticalAlignment="Top" Width="100"/>
        <DatePicker x:Name="dpc_fecha" HorizontalAlignment="Left" Margin="361,147,0,0" VerticalAlignment="Top" Width="228"/>
        <Label Content="Fecha" HorizontalAlignment="Left" Margin="303,147,0,0" VerticalAlignment="Top"/>
        <Label Content="Hora" HorizontalAlignment="Left" Margin="308,191,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Minuto" HorizontalAlignment="Left" Margin="445,195,0,0" VerticalAlignment="Top" Width="74" SelectionChanged="ComboBox_SelectionChanged">
            <ListBoxItem Content="Minuto"/>
            <ListBoxItem Content="00"/>
            <ListBoxItem Content="30"/>
        </ComboBox>
        <ComboBox x:Name="cmb_Hora" HorizontalAlignment="Left" Margin="361,195,0,0" VerticalAlignment="Top" Width="61">
            <ListBoxItem Content="Hora"/>
            <ListBoxItem Content="01"/>
            <ListBoxItem Content="02"/>
            <ListBoxItem Content="03"/>
            <ListBoxItem Content="04"/>
            <ListBoxItem Content="05"/>
            <ListBoxItem Content="06"/>
            <ListBoxItem Content="07"/>
            <ListBoxItem Content="08"/>
            <ListBoxItem Content="09"/>
            <ListBoxItem Content="10"/>
            <ListBoxItem Content="11"/>
            <ListBoxItem Content="12"/>
        </ComboBox>
        <Label Content=":" HorizontalAlignment="Left" Margin="427,191,0,0" VerticalAlignment="Top"/>
        <Label Content="Delegacion" HorizontalAlignment="Left" Margin="14,272,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_delegacion" HorizontalAlignment="Left" Margin="138,276,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
