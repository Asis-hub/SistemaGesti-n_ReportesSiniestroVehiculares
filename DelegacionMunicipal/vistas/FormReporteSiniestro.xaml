<Window x:Class="DelegacionMunicipal.vistas.FormReporteSiniestro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegacionMunicipal.vistas"
        mc:Ignorable="d"
        Title="Levantar Reporte de Siniestro" Height="467" Width="800">
    <Grid ScrollViewer.CanContentScroll="True">
        <Label Content="Seleccionar Vehiculo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Conductor" HorizontalAlignment="Left" Margin="90,48,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Conductor" HorizontalAlignment="Left" Margin="170,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Vehicuulo" HorizontalAlignment="Left" Margin="353,44,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmb_Vehiculo" HorizontalAlignment="Left" Margin="432,48,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_Agregar" Content="Agregar" HorizontalAlignment="Left" Margin="580,48,0,0" VerticalAlignment="Top" Width="74"/>
        
        <Label Content="Vehiculos involucrados" HorizontalAlignment="Left" Margin="10,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.12,0.2"/>
        
        
        <Label Content="Dirección" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top"/>
        <Label Content="Colonia:" HorizontalAlignment="Left" Margin="40,242,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.451,0.435"/>
        <TextBox x:Name="txt_Colonia" HorizontalAlignment="Left" Height="23" Margin="90,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Calle:" HorizontalAlignment="Left" Margin="279,242,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Calle" HorizontalAlignment="Left" Height="23" Margin="328,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Número:" HorizontalAlignment="Left" Margin="472,239,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="txt_Numero" HorizontalAlignment="Left" Height="23" Margin="562,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Imágenes" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,273,0,0"/>
        <Button x:Name="btn_AgregarImagen" Content="Agregar imagen" HorizontalAlignment="Left" Margin="53,304,0,0" VerticalAlignment="Top" />
        
        
        <Button x:Name="btn_RegistrarReporte" Content="Registrar" HorizontalAlignment="Left" Margin="535,406,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btn_CancelarRegistro" Content="Cancelar" HorizontalAlignment="Left" Margin="625,406,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
