<Window x:Class="DelegacionMunicipal.Conductores.FormConductor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegacionMunicipal.Conductores"
        mc:Ignorable="d"
        Title="Conductor" Height="302.812" Width="394.062">
    <Grid>
        <Label Content="No. Licencia:" HorizontalAlignment="Left" Margin="15,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_NoLicencia" HorizontalAlignment="Left" Height="23" Margin="141,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>

        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="15,70,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_NombreConductor" HorizontalAlignment="Left" Height="23" Margin="141,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>

        <Label Content="Fecha de Nacimiento" HorizontalAlignment="Left" Margin="15,110,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_FechaNacimiento" HorizontalAlignment="Left" Height="23" Margin="141,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>

        <Label Content="Teléfono" HorizontalAlignment="Left" Margin="15,150,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txt_Telefono" HorizontalAlignment="Left" Height="23" Margin="141,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="218"/>

        <Button x:Name="btn_RegistrarConductor" Content="Registrar" HorizontalAlignment="Left" Margin="180,226,0,0" VerticalAlignment="Top" Width="74" Click="btn_RegistrarConductor_Click"/>
        <Button x:Name="btn_CancelarRegistro" Content="Cancelar" HorizontalAlignment="Left" Margin="284,226,0,0" VerticalAlignment="Top" Width="75" Click="btn_CancelarRegistro_Click"/>

    </Grid>
</Window>
